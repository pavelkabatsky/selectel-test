footer
    box-shadow 0px -1px 5px rgba(0, 0, 0, 0.2);

.footer 
    position relative
    display flex
    padding 24px 0

.footer .social
    max-width 52px
    text-align center
    
    @media screen and (min-width:768px)
        max-width 112px
        text-align left
    @media screen and (min-width:1200px)
        max-width 148px

.footer .logo 
    display block
    width 52px
    margin-bottom 20px

    @media screen and (min-width:768px)
        width 82px
    @media screen and (min-width:1200px)
        min-width 112px

.footer .social-links
    display inline-block

    &__item
        display inline-block
        margin-right 10px
        margin-bottom 12px
        text-decoration none

        @media screen and (min-width:768px)
            margin-right 16px

        svg 
            @media screen and (min-width:1200px)
                width 22px
                height 22px

        &:nth-child(2n)
            margin-right 0

            @media screen and (min-width:768px)
                margin-right 16px

        &:last-child 
            margin-right 0

.footer-menu
    font-family 'MuseoSans'
    column-count: 2;
    column-gap: 0;

    @media screen and (min-width:768px)
        flex 1
        column-count: 4;
    
    &__item 
        padding-left 28px
        margin-bottom 10px

        @media screen and (min-width:768px)
            padding-left 32px
        @media screen and (min-width:1200px)
            padding-left 48px
            margin-bottom 14px

        a   
            font-params(12px, 120%, 0.0275em)
            color links
            text-decoration none

            @media screen and (min-width:1200px)
                font-size 14px

